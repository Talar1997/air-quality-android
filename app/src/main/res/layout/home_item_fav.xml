<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    android:id="@+id/home_item_fav">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/measurement_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_cloud_queue_24"
            app:tint="@color/colorSecondary" />

        <TextView
            android:id="@+id/station_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/station_title_placeholder"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="65dp"/>

        <TextView
            android:id="@+id/station_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/station_description_placeholder"
            android:textColor="#A4070707"
            android:layout_below="@id/station_location"
            android:layout_marginLeft="65dp"/>

        <TextView
            android:id="@+id/station_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Indeks jakoÅ›ci powietrza:"
            android:textColor="#A4070707"
            android:layout_below="@id/station_condition"
            android:layout_marginLeft="65dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>