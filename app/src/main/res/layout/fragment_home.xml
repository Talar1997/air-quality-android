<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="Najbliższa stacja pomiarowa"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/measurement_icon"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_cloud_queue_24"
                app:tint="@color/colorSecondary" />

            <TextView
                android:id="@+id/station_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/station_title_placeholder"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:id="@+id/station_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/station_description_placeholder"
                android:textColor="#A4070707"
                android:layout_below="@id/station_location"
                android:layout_marginLeft="65dp"/>

            <TextView
                android:id="@+id/station_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Indeks jakości powietrza:"
                android:textColor="#A4070707"
                android:layout_below="@id/station_condition"
                android:layout_marginLeft="65dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="Zapisane stacje"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fav_home_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/home_item_fav"
        />

</LinearLayout>